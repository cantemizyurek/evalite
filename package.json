{
  "name": "evalite-monorepo",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.11.0",
  "description": "",
  "engines": {
    "node": ">=22"
  },
  "private": true,
  "scripts": {
    "dev": "wireit",
    "docs:dev": "(cd apps/evalite-docs && pnpm run dev)",
    "ci": "wireit",
    "build": "wireit",
    "release": "pnpm run build && changeset publish",
    "test-example": "cd packages/example && pnpm evalite watch",
    "prepare": "husky",
    "format": "prettier --write .",
    "check-format": "wireit",
    "postinstall": "pnpm run build"
  },
  "keywords": [],
  "author": "Matt Pocock",
  "license": "MIT",
  "dependencies": {
    "@changesets/cli": "^2.27.10",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.7.7",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "remark-gfm": "^4.0.1",
    "tsx": "^4.19.0",
    "typescript": "5.6.2",
    "vitest": "^3.2.4",
    "wireit": "^0.14.9"
  },
  "resolutions": {
    "typescript": "5.6.2"
  },
  "wireit": {
    "dev": {
      "dependencies": [
        "./packages/evalite:dev",
        "./packages/evalite-tests:dev",
        "./apps/evalite-ui:dev",
        "./packages/example:dev"
      ]
    },
    "ci": {
      "dependencies": [
        "./packages/evalite:build",
        "./packages/evalite:test",
        "./apps/evalite-ui:build",
        "./apps/evalite-ui:after-build",
        "./apps/evalite-ui:lint",
        "./apps/evalite-ui:test",
        "./packages/evalite-tests:test",
        "./packages/evalite-tests:lint",
        "check-format"
      ]
    },
    "build": {
      "dependencies": [
        "./packages/evalite:build",
        "./apps/evalite-ui:build",
        "./apps/evalite-ui:after-build"
      ]
    },
    "check-format": {
      "command": "prettier --check ."
    }
  }
}
