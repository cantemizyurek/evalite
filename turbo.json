{
  "$schema": "https://turbo.build/schema.json",
  "daemon": true,
  "ui": "tui",
  "tasks": {
    "setup": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build", "^after-build"],
      "outputs": [],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist", "*.tsbuildinfo", ".next"],
      "cache": true
    },
    "after-build": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
